{
    "compilerOptions": {
        "outDir": "./../public/js/",
        "noImplicitAny": true,
        "module": "ES2020",
        "target": "ES5",
        "sourceMap": true,
        "lib": ["ES2015", "DOM", "ES2017"],
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "@/*": ["./src/script/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}
